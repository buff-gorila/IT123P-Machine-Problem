<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="93.5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textReports" />
    <TextView
        android:text="Enter in text view to see if message is in report (will grab first report found)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editFinder" />
    <Button
        android:text="Search for report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSearcher" />
    <!-- everything beyond here will be hidden until a value is searched -->
    <TextView
        android:text="Updated Text:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editUpdatedText" />
    <Button
        android:text="Update Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUpdate" />
    <Button
        android:text="Delete Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDelete" />
    <Button
        android:text="Return to main menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1" />





</LinearLayout>
